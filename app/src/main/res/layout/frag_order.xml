<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:addon="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_material_light"
    android:clickable="true">
    <TextView
        android:id="@+id/order_num_lbl"
        android:text="Order #343"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="italic"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="marquee"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:textSize="16sp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/order_header_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="12 Apr 2015 12:05"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/abc_primary_text_material_light"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="marquee"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/order_dates_lb"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/status_cap"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_blue_600"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:ellipsize="marquee"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    />
                <TextView
                    android:id="@+id/order_status_lb"
                    android:text="Done"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_blue_600"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="right"
                    android:ellipsize="marquee"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/ordered_qty_cap"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/abc_primary_text_material_light"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:ellipsize="marquee"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    />
                <TextView
                    android:id="@+id/order_repl_qty_lb"
                    android:text="120"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/abc_primary_text_material_light"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="right"
                    android:ellipsize="marquee"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/order_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_share"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle4"/>
        <ImageButton
            android:id="@+id/order_stop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_stop"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle2"/>

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical"
        android:layout_margin="1dp"
        />
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:id="@+id/order_comment_lay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:text="@string/comments_cap"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/abc_primary_text_material_light"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left"
            android:ellipsize="marquee"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="14sp"
           />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/order_comment_edit"
            android:hint="@string/comments_hint_cap"
            android:gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>

    <org.lucasr.twowayview.widget.TwoWayView
        android:id="@+id/order_selected_rview"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/TwoWayView"
        addon:twowayview_layoutManager="ListLayoutManager"
        android:visibility="gone"
        />

    <org.lucasr.twowayview.widget.TwoWayView
        android:id="@+id/order_all_rview"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/TwoWayView"
        addon:twowayview_layoutManager="ListLayoutManager"
        android:visibility="gone"
    />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical"
        android:layout_margin="1dp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ImageButton
            android:id="@+id/order_all_but"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_action_view_as_list"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/circle4"/>
        <ImageButton
            android:id="@+id/order_used_but"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_action_add_to_queue"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/circle4"/>
        <ImageButton
            android:id="@+id/order_comment_but"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_action_event"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/circle4"/>

        </LinearLayout>
</LinearLayout>
