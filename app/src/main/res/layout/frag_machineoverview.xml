<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:addon="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_material_light">
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    addon:cardCornerRadius="2dp"
    addon:cardElevation="4dp"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_teal_50">
        <TextView
            android:text="@string/machine_cap"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/abc_primary_text_material_light"
            android:textStyle="italic"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="marquee"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:textSize="14sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/machinecard_name"
            android:text="Хозяйственные товары"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/abc_primary_text_material_light"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="marquee"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:text="Long description of the item"
            android:id="@+id/machinecard_description"
            android:layout_marginBottom="3dp"
            android:textColor="@color/abc_secondary_text_material_light"
            android:ellipsize="marquee"
            android:singleLine="false"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="12sp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        addon:cardCornerRadius="2dp"
        addon:cardElevation="2dp"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="@string/maintenance_cap"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/abc_primary_text_material_light"
                android:textStyle="italic"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="marquee"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="0dp"
                android:textSize="14sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/machinecard_main_top"
                android:text="Нет данных"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/abc_primary_text_material_light"
                android:textStyle="normal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="marquee"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="Description"
                android:id="@+id/machinecard_comment"
                android:layout_marginBottom="3dp"
                android:textColor="@color/abc_secondary_text_material_light"
                android:ellipsize="marquee"
                android:singleLine="false"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:text="@string/status_cap"
                    android:id="@+id/machinecard_1"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="marquee"
                    android:textColor="@color/md_blue_600"
                    android:singleLine="false"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:text="Unknown"
                    android:id="@+id/machinecard_status"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="marquee"
                    android:singleLine="false"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/md_blue_600"
                    android:gravity="right"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:text="@string/duration_cap"
                    android:id="@+id/machinecard_3"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="marquee"
                    android:singleLine="false"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:text="0"
                    android:id="@+id/machinecard_duration"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="marquee"
                    android:singleLine="false"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:text="@string/replenished_qty_cap"
                    android:id="@+id/machinecard_2"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="marquee"
                    android:singleLine="false"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:text="0"
                    android:id="@+id/machinecard_qty"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="marquee"
                    android:singleLine="false"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerVertical"
                android:layout_margin="1dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp">


                <ImageButton
                    android:id="@+id/machinecard_view_main_list"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_action_view_as_list"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/md_teal_300"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    />
                <ImageButton
                    android:id="@+id/machinecard_new_main"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_plus2"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/md_teal_500"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
android:layout_width="fill_parent"
android:layout_height="wrap_content"
addon:cardCornerRadius="2dp"
addon:cardElevation="2dp"
    >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:text="@string/accounting_cap"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="italic"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="marquee"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:textSize="14sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/machinecard_n1"
        android:text="Хозяйственные товары"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="marquee"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:text="Long description of the item"
        android:id="@+id/machinecard_d1"
        android:layout_marginBottom="3dp"
        android:textColor="@color/abc_secondary_text_material_light"
        android:ellipsize="marquee"
        android:singleLine="false"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12sp"/>

</LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>
